FROM python:3.13-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy math server
COPY mathserver.py .

# Expose port
EXPOSE 8002

# Set environment variables
ENV MATH_MCP_PORT=8002
ENV MATH_MCP_HOST=0.0.0.0

# Run the math server
CMD ["python", "mathserver.py"]

