FROM python:3.13-slim

WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY app.py .
COPY templates/ templates/
COPY static/ static/
COPY config.py .

# Expose port
EXPOSE 5001

# Set environment variables
ENV FLASK_PORT=5001
ENV SYS_MCP_URL=http://sysserver:8001/mcp
ENV WEATHER_MCP_URL=http://weatherserver:8000/mcp

# Run the application
CMD ["python", "app.py"]

